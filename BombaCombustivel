package lista;

public  class  BombaCombustivel {
    private  String  tipoCombustivel ;
     float  privado valorLitro ;
     float  privado quantidade Combustivel ;

    public  BombaCombustivel ( String  tipoCombustivel , float  valorLitro , float  quantidadeCombustivel ) {
        isso . tipoCombustivel = tipoCombustivel ;
        isso . valorLitro = valorLitro ;
        isso . quantidadeCombustivel = quantidadeCombustivel ;
    }

    public  void  abastecerPorValor ( float  valor ){
        float  qtdLitros ;
        qtdLitros = valor / this . valor Litro ;
        isso . quantidade Combustível -= qtdLitros ;

        Sistema . fora . println ( "Abasteceu" + qtdLitros + "litros de " + this.tipoCombustivel ) ;
    }

    public  void  abastecerPorLitro ( float  litro ) {
        float  valorPago ;
        valorPago = valorLitro * litro ;
        isso . quantidade Combustível -= litro ;

        Sistema . fora . println ( "Valor a ser pago: R$" + valorPago + "reais" );
    }

    public  void  alterarValorLitro ( float  valorLitro ) {
        isso . valorLitro = valorLitro ;
    }

    public  void  alterarTipoCombustivel ( String  tipoCombustivel ) {
        isso . tipoCombustivel = tipoCombustivel ;
    }

    public  void  alterarQuantidadeCombustivel ( float  quantidadeCombustivel ) {
        isso . quantidadeCombustivel = quantidadeCombustivel ;
    }
}
